#!/usr/bin/env perl6
use lib 'lib/';
use Undo::Frontend;
use Serialize::Tiny;
use JSON::Tiny;

subset File of Str where .IO.e && !.IO.d;

#| Parse a whole file
multi MAIN(File $file) {
  my $parse-tree = parse(slurp $file);
  die "Parse error" unless $parse-tree;
  my %ast = serialize-ast($parse-tree);
  say to-json(%ast);
}

